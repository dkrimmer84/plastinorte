<odoo>
    <template id="report_purchasequotation_inherit" inherit_id="purchase.report_purchasequotation_document">   
        <xpath expr="//t[@t-call='web.external_layout']" position="replace">

            <t t-call="web.external_layout">
            <!--
        <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)"/>
        <t t-set="address">
            <div t-field="o.partner_id"
            t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}'/>
            <p t-if="o.partner_id.vat"><t t-esc="o.company_id.country_id.vat_label or 'Tax ID'"/>: <span t-field="o.partner_id.vat"/></p>
        </t>
        <t t-if="o.dest_address_id">
            <t t-set="information_block">
                <strong>Shipping address:</strong>
                <div t-field="o.dest_address_id"
                    t-options='{"widget": "contact", "fields": ["address", "name", "phone"], "no_marker": True, "phone_icons": True}' name="purchase_shipping_address"/>
            </t>
        </t>
        -->
        <div class="page" style="font-size: 12px; margin-top: 1px; display: block; width: 100%; float:left;">

            <div t-if="o.picking_type_id and o.picking_type_id.warehouse_id" style="margin-top: 35px;">
                <strong style="background-color: #ffff00; padding: 2px;">Dirección de entrega:</strong>
                <t t-if="o.picking_type_id.warehouse_id.name">
                    <strong><span t-field="o.picking_type_id.warehouse_id.name"/></strong>
                </t>
                <t t-if="o.picking_type_id.warehouse_id.partner_id.street">
                    , <span t-field="o.picking_type_id.warehouse_id.partner_id.street"/>
                </t>
                <t t-if="o.picking_type_id.warehouse_id.partner_id.street2">
                    , <span t-field="o.picking_type_id.warehouse_id.partner_id.street2"/>
                </t>
                <t t-if="o.picking_type_id.warehouse_id.partner_id.city">
                    , <span t-field="o.picking_type_id.warehouse_id.partner_id.city"/>
                </t>
                <t t-if="o.picking_type_id.warehouse_id.partner_id.state_id">
                    , <span t-field="o.picking_type_id.warehouse_id.partner_id.state_id"/>
                </t>
                <t t-if="o.picking_type_id.warehouse_id.partner_id.mobile">
                    , Cel.: <span t-field="o.picking_type_id.warehouse_id.partner_id.mobile"/>
                </t>
                <t t-if="o.picking_type_id.warehouse_id.partner_id.phone">
                    , Tel.: <span t-field="o.picking_type_id.warehouse_id.partner_id.phone"/>               
                </t>
            </div>
            <div class="oe_structure"/>

            <h2 style="margin-top: 20px; font-size: 23px; margin-bottom: 25px;">Solicitud de Cotización<span t-field="o.name"/></h2>

            <table class="table table-sm" style="font-size:11px;">
                <thead>
                    <tr>
                        <th><strong>Descripción</strong></th>
                        <th class="text-center"><strong>Fecha esperada</strong></th>
                        <th class="text-right"><strong>Cant.</strong></th>
                    </tr>
                </thead>
                <tbody>
                    <tr t-foreach="o.order_line" t-as="order_line">
                        <td>
                            <span t-field="order_line.name"/>
                        </td>
                        <td class="text-center">
                            <span t-field="order_line.date_planned"/>
                        </td>
                        <td class="text-right">
                            <span t-field="order_line.product_qty"/>
                            <span t-field="order_line.product_uom" groups="uom.group_uom"/>
                        </td>
                    </tr>
                </tbody>
            </table>

            <p t-field="o.notes" style="font-size:11px;" />

            <div class="oe_structure"/>
        </div>
        </t>
     </xpath>
</template>

<template id="report_purchasequotation">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="purchase.report_purchasequotation_document" t-lang="o.partner_id.lang"/>
        </t>
    </t>
</template>
</odoo>
