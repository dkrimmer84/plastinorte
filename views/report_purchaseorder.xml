        <div class="page" style="font-size: 12px;  margin-top: 1px; display: block; width: 100%; float:left;">
        
            <div t-if="o.picking_type_id and o.picking_type_id.warehouse_id" style="margin-top: 35px;">
                <strong style="background-color: #ffff00; padding: 2px;">Dirección de entrega:</strong>
                <t t-if="o.picking_type_id.warehouse_id.name">
                    <strong><span t-field="o.picking_type_id.warehouse_id.name"/></strong>
                </t>
                <t t-if="o.picking_type_id.warehouse_id.partner_id.street">
                    , <span t-field="o.picking_type_id.warehouse_id.partner_id.street"/>
                </t>
                <t t-if="o.picking_type_id.warehouse_id.partner_id.street2">
                    , <span t-field="o.picking_type_id.warehouse_id.partner_id.street2"/>
                </t>
                <t t-if="o.picking_type_id.warehouse_id.partner_id.city">
                    , <span t-field="o.picking_type_id.warehouse_id.partner_id.city"/>
                </t>
                <t t-if="o.picking_type_id.warehouse_id.partner_id.state_id">
                    , <span t-field="o.picking_type_id.warehouse_id.partner_id.state_id"/>
                </t>
                <t t-if="o.picking_type_id.warehouse_id.partner_id.mobile">
                    , Cel.: <span t-field="o.picking_type_id.warehouse_id.partner_id.mobile"/>
                </t>
                <t t-if="o.picking_type_id.warehouse_id.partner_id.phone">
                    , Tel.: <span t-field="o.picking_type_id.warehouse_id.partner_id.phone"/>               
                </t>
            </div>
            <div class="oe_structure"/>

            <h2 style="margin-top: 20px; font-size: 23px; margin-bottom: 25px;" t-if="o.state == 'draft'">Solicitud de Cotización #<span t-field="o.name"/></h2>
            <h2 style="margin-top: 20px; font-size: 23px; margin-bottom: 25px;" t-if="o.state in ['sent', 'to approve']">Orden de Compra #<span t-field="o.name"/></h2>
            <h2 style="margin-top: 20px; font-size: 23px; margin-bottom: 25px;" t-if="o.state in ['purchase', 'done']">Orden de Compra (confirmada) #<span t-field="o.name"/></h2>
            <h2 style="margin-top: 20px; font-size: 23px; margin-bottom: 25px;" t-if="o.state == 'cancel'">Orden de Compra (cancelada) #<span t-field="o.name"/></h2>

            <div id="informations" class="row mt32 mb32" style="margin-top:10px !important; margin-bottom: 20px !important;">
                <div t-if="o.name" class="col-3 bm-2">
                    <strong>Nuestra Referencia:</strong>
                    <p t-field="o.name" class="m-0"/>
                </div>
                <div t-if="o.partner_ref" class="col-3 bm-2">
                    <strong>Su Referencia:</strong>
                    <p t-field="o.partner_ref" class="m-0"/>
                </div>
                <div t-if="o.date_order" class="col-3 bm-2">
                    <strong>Fecha de la Orden:</strong>
                    <p t-field="o.date_order" class="m-0"/>
                </div>
            </div>

            <table class="table table-sm o_main_table" style="font-size:11px;">
                <thead style="background: #efefef;">
                    <tr>
                        <th><strong>Descripción</strong></th>
                        <th><strong>Impuestos</strong></th>
                        <th class="text-center"><strong>Fecha plan.</strong></th>
                        <th class="text-right"><strong>Cant.</strong></th>
                        <th class="text-right"><strong>Precio Unitario</strong></th>
                        <th class="text-right"><strong>Subtotal</strong></th>
                    </tr>
                </thead>
                <tbody>
                    <tr t-foreach="o.order_line" t-as="line">
                        <td>
                            <span t-field="line.name"/>
                        </td>
                        <td>
                            <span t-esc="', '.join(map(lambda x: x.name, line.taxes_id))"/>
                        </td>
                        <td class="text-center">
                            <span t-field="line.date_planned"/>
                        </td>
                        <td class="text-right">
                            <span t-field="line.product_qty"/>
                            <span t-field="line.product_uom.name" groups="uom.group_uom"/>
                        </td>
                        <td class="text-right">
                            <span t-field="line.price_unit"/>
                        </td>
                        <td class="text-right">
                            <span t-field="line.price_subtotal"
                                t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                        </td>
                    </tr>
                </tbody>
            </table>

            <div id="total" class="row justify-content-end">
                <div class="col-4">
                    <table class="table table-sm">
                        <tr class="border-black">
                            <td><strong>Subtotal</strong></td>
                            <td class="text-right">
                                <span t-field="o.amount_untaxed"
                                    t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                            </td>
                        </tr>
                        <tr>
                            <td>Impuestos</td>
                            <td class="text-right">
                                <span t-field="o.amount_tax"
                                    t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                            </td>
                        </tr>
                        <tr class="border-black o_total" style="font-size: 18px;">
                            <td><strong>Total</strong></td>
                            <td class="text-right">
                                <span t-field="o.amount_total"
                                    t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>

            <p t-field="o.notes" style="font-size:11px;" />
            <div class="oe_structure"/>
        </div>
            
            </t>
        </xpath>
    </template>
    <template id="report_purchaseorder">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="purchase.report_purchaseorder_document" t-lang="o.partner_id.lang"/>
        </t>
    </t>
</template>
</odoo>
